{
	"manifest_version": 2,
	"author": "Hidemitsu Aoki",
	"homepage_url": "http://example.com",
	"name": "affiliate-link-detector",
	"description": "This make it possible to recognize affiliate links on websites",
	"version": "1.0.0",
	"icons": {
		"32": "icon_32.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["script.js"]
	}],
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "icon_32.png",
		"default_title": ""
	},
	"permissions": [
		"tabs",
		"background",
		"http://*/*",
		"https://*/*"
	]
}
